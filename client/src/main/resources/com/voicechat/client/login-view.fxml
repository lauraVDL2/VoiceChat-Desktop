<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      fx:controller="com.voicechat.client.login.LoginController">
    <!-- Status Label -->
    <Label fx:id="statusLabel" text="Not connected" style="-fx-font-weight: bold;"/>

    <!-- Username input -->
    <TextField fx:id="usernameField" promptText="Enter username" disable="true"/>

    <!-- Login Button -->
    <Button fx:id="loginButton" text="Login" disable="true"/>
</VBox>